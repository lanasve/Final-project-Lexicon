@model Snyggerik.Models.Post

@{
    ViewBag.Title = "Delete";
}
<div class="container body-content">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <h3 style="color:red">Obs! All items related to the post will be removed!</h3>
    <div>
        <h4>Post</h4><br />
        <div>
            @Html.ActionLink("Back to My Blogs List", "MyBlogs", "Blogs")
            ||
            @Html.ActionLink("Back to My Posts List", "MyPosts", "Posts")
        </div>
        <br />
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.PostTitle)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PostTitle)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PostBody)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PostBody)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PostCreated)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PostCreated)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Views)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Views)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" onclick="location.href='MyPosts.html'" />
                <br />
            </div>
            <br />

        }
    </div>
</div>