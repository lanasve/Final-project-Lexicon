@model Snyggerik.Models.Blog

@{
    ViewBag.Title = "Delete";
}
<div class="container body-content">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <h3 style="color:red">Att! All items related to the blog will be removed!</h3>
    <div>
        <h4>Blog</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.BlogTitle)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BlogTitle)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.BlogBody)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BlogBody)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.BlogCreated)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BlogCreated)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <br /> <br /><br />
                @Html.ActionLink("Back to My Blogs List", "MyBlogs")
            </div>
        }
    </div>
</div>